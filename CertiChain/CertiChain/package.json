{
  "name": "certichain",
  "version": "1.0.0",
  "description": "Blockchain-based Certificate Management System",
  "main": "index.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "hardhat:compile": "hardhat compile",
    "hardhat:test": "hardhat test",
    "hardhat:deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "hardhat:deploy:goerli": "hardhat run scripts/deploy.js --network goerli",
    "hardhat:deploy:polygon": "hardhat run scripts/deploy.js --network polygon",
    "hardhat:deploy:mainnet": "hardhat run scripts/deploy.js --network mainnet",
    "hardhat:node": "hardhat node",
    "hardhat:console": "hardhat console",
    "clean": "rimraf dist/ build/",
    "prebuild": "npm run clean",
    "postinstall": "npm run hardhat:compile"
  },
  "keywords": [
    "blockchain",
    "certificates",
    "ethereum",
    "solidity",
    "ipfs",
    "verification",
    "education",
    "credentials"
  ],
  "author": "CertiChain Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/certichain.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/certichain/issues"
  },
  "homepage": "https://certichain.com",
  "dependencies": {
    "ethers": "^5.7.2",
    "web3": "^1.9.0",
    "ipfs-http-client": "^60.0.1",
    "pinata-sdk": "^1.0.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.6",
    "qrcode": "^1.5.3",
    "uuid": "^9.0.1",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "axios": "^1.5.0",
    "ws": "^8.14.2",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^3.0.2",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts": "^4.9.3",
    "@openzeppelin/hardhat-upgrades": "^1.25.0",
    "hardhat": "^2.17.0",
    "hardhat-deploy": "^0.12.0",
    "hardhat-deploy-ethers": "^0.11.4",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.2",
    "ethereum-waffle": "^4.0.10",
    "chai": "^4.3.7",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.1",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "html-webpack-plugin": "^5.5.3",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3",
    "file-loader": "^6.2.0",
    "babel-loader": "^9.1.3",
    "@babel/core": "^7.22.15",
    "@babel/preset-env": "^7.22.15",
    "@babel/preset-react": "^7.22.15",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.2",
    "rimraf": "^5.0.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/**/*.spec.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "hardhat": {
    "solidity": "0.8.19",
    "networks": {
      "hardhat": {
        "chainId": 1337
      },
      "localhost": {
        "url": "http://127.0.0.1:8545",
        "chainId": 1337
      },
      "goerli": {
        "url": "https://goerli.infura.io/v3/${INFURA_PROJECT_ID}",
        "accounts": ["${PRIVATE_KEY}"],
        "chainId": 5
      },
      "polygon": {
        "url": "https://polygon-mumbai.infura.io/v3/${INFURA_PROJECT_ID}",
        "accounts": ["${PRIVATE_KEY}"],
        "chainId": 80001
      }
    },
    "gasReporter": {
      "enabled": true,
      "currency": "USD",
      "coinmarketcap": "${COINMARKETCAP_API_KEY}"
    },
    "solidityCoverage": {
      "excludeContracts": [
        "mocks/",
        "test/"
      ]
    }
  }
}
